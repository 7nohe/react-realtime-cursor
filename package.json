{
  "name": "@7nohe/react-realtime-cursor",
  "description": "A react component that allows you to integrate cursor chat like Figma into your web application",
  "version": "0.2.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "lint:fix": "tsdx lint --fix",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "release": "np"
  },
  "peerDependencies": {
    "firebase": ">=9.9.2",
    "react": ">=18"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "author": "DAIKI URATA(@7nohe)",
  "module": "dist/react-realtime-cursor.esm.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/7nohe/react-realtime-cursor.git"
  },
  "homepage": "https://github.com/7nohe/react-realtime-cursor",
  "bugs": "https://github.com/7nohe/react-realtime-cursor/issues",
  "size-limit": [
    {
      "path": "dist/react-realtime-cursor.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/react-realtime-cursor.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.0.0",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "firebase": "^9.9.2",
    "husky": "^8.0.1",
    "np": "^7.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "size-limit": "^8.0.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  }
}
